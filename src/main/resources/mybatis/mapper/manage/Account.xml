<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ailu.tokenmedia.manage.account.dao.ManageAccountDao">

	<select id="getList" resultType="com.ailu.tokenmedia.manage.account.dto.AccountListDTO">
		select id,wechatid,biz_name,type from wechat
		<if test="keyword != ''">
			where biz_name like CONCAT('%',#{keyword},'%') 
		</if>
		limit #{start},#{length}
	</select>
	
	<select id="getCount" resultType="int">
		select count(0) from wechat
		<if test="keyword != ''">
			where biz_name like CONCAT('%',#{keyword},'%')
		</if>
	</select>

	<insert id="save">
		insert into wechat (wechatid,type) values (#{account},#{type})
	</insert>

</mapper>